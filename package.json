{
  "name": "shelve",
  "private": true,
  "type": "module",
  "repository": "https://github.com/HugoRCD/shelve",
  "scripts": {
    "build": "turbo build",
    "build:app": "turbo build --filter=@shelve/app",
    "build:lp": "turbo build --filter=@shelve/lp",
    "build:cli": "turbo build --filter=@shelve/cli",
    "dev": "turbo dev --filter=@shelve/app",
    "dev:app": "turbo dev --filter=@shelve/app",
    "dev:lp": "turbo dev --filter=@shelve/lp",
    "dev:cli": "turbo dev --filter=@shelve/cli",
    "dev:prepare": "turbo dev:prepare",
    "prisma:generate": "turbo prisma:generate",
    "generate": "turbo generate",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "edge",
    "@shelve/cli": "*",
    "automd": "^0.3.12",
    "eslint": "^9.14.0",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "packageManager": "bun@1.1.26",
  "trustedDependencies": ["@shelve/app", "@shelve/lp"],
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
