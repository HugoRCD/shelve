  "peerDependencies": {
    "typescript": "^5.4.3"
  },
  "bin": {
    "shelve": "dist/index.mjs",
    "shelve-cli": "dist/index.mjs"
  },
  "exports": {
    ".": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "citty": "^0.1.6",
    "colorette": "^2.0.20",
    "consola": "^3.2.3",
