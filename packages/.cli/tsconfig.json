{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "declaration": true,
    "types": ["node"],
  },
  "include": ["src"]
}
