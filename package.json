{
  "name": "shelve",
  "version": "2.3.3",
  "private": true,
  "type": "module",
  "repository": "https://github.com/HugoRCD/shelve",
  "scripts": {
    "dev": "turbo run dev --filter=@shelve/{app,lp}",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "release": "turbo run release && changeset",
    "build:app": "turbo run build --filter=@shelve/app",
    "build:lp": "turbo run build --filter=@shelve/lp",
    "build:vault": "turbo run build --filter=@shelve/vault",
    "build:cli": "turbo run build --filter=@shelve/cli",
    "dev:app": "turbo run dev --filter=@shelve/app",
    "dev:lp": "turbo run dev --filter=@shelve/lp",
    "dev:vault": "turbo run dev --filter=@shelve/vault",
    "dev:cli": "turbo run dev --filter=@shelve/cli"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@hrcd/eslint-config": "^3.0.3",
    "@shelve/cli": "workspace:*",
    "automd": "^0.4.2",
    "eslint": "^9.39.2",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest",
      "@nuxt/vite-builder": "https://pkg.pr.new/@nuxt/vite-builder@33682"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "vue-demi"
    ]
  },
  "packageManager": "pnpm@10.28.1",
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
