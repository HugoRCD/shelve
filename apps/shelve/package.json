    "@nuxthub/core": "^0.8.7",
    "@shelve/crypto": "latest",
    "@shelve/utils": "latest",
    "@vueuse/core": "11.3.0",
    "@vueuse/nuxt": "11.3.0",
    "drizzle-kit": "0.28.1",
    "drizzle-orm": "0.36.4",
